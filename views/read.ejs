<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html, body {
            width: 100% !important;
            min-width: 100% !important;
        }
    </style>
</head>
<body class="h-screen bg-zinc-900 text-white p-4">
    <a class="text-blue-500" href="/">Back to Home</a>
    <h1 class="text-3xl tracking-tighter mb-3 ">All Users</h1>
    <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
            <div class="user w-72 p-5 bg-zinc-700 rounded-md">
            <div class="w-full h-52 rounded-lg bg-black overflow-hidden">
                <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
            </div>
            <h3 class="text-xl flex tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-12 mt-10">
                <a class="text-zinc-400" href="/edit/<%=user._id%>">Edit User</a>
                <a class="text-red-400" href="/delete/<%=user._id%>">Delete User</a>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>
